root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,py,yml,yaml}]
charset = utf-8

# 4 tab indentation
[*.{js,jsx,py,vue}]
indent_style = tab
indent_size = 4

# 2 space indentation
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Specific files
[package.json]
indent_style = space
indent_size = 2

# Tab indentation (no size specified)
[Makefile]
indent_style = tab
